{
  "extends" : [
    "tslint:recommended"
  ],
  "rules": {
    "forin": false,
    "interface-name": [false],
    "no-console": [false],
    "no-namespace": [true, "allow-declarations"],
    "object-literal-key-quotes": [true, "consistent-as-needed"],
    "quotemark": [true, "single", "avoid-template", "avoid-escape"],
    "trailing-comma": [
      true,
      "never"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ]
  }
}
